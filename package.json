{
  "name": "mermaid-ast-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "test": "cd packages/mermaid-ast && bun test tests/unit tests/roundtrip",
    "test:mermaid-ast": "cd packages/mermaid-ast && bun test",
    "test:mermaid-svg": "cd packages/mermaid-svg && bun test",
    "build": "cd packages/mermaid-ast && bun run build",
    "typecheck": "cd packages/mermaid-ast && bun run typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/bun": "latest"
  }
}